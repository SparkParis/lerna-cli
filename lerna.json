{
  "packages": [
    "packages/*/*"
  ],
  "version": "independent",
  "useNx": true,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish"
    }
  }
}